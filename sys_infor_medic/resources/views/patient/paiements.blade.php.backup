      analyse: 'Analyse médicale',
      acte: 'Acte médical'
    };
    
    // Éléments du formulaire
    const typeRadios = document.querySelectorAll('input[name="kind"]');
    const amountInput = document.getElementById('amount');
    const amountDisplay = document.getElementById('amount-display');
    const labelInput = document.getElementById('label');
    const refSelect = document.getElementById('ref_id');
    const providerSelect = document.querySelector('select[name="provider"]');
    
    // Éléments du récapitulatif
    const summaryType = document.getElementById('summary-type');
    const summaryProvider = document.getElementById('summary-provider');
    const summaryAmount = document.getElementById('summary-amount');
    
    // Fonction de mise à jour
    function updatePaymentDetails() {
      const selectedType = document.querySelector('input[name="kind"]:checked')?.value || 'consultation';
      const selectedProvider = providerSelect?.value || 'wave';
      
      // Mettre à jour le montant
      const price = prices[selectedType] || prices.consultation;
      const formattedPrice = new Intl.NumberFormat('fr-FR').format(price);
      
      amountInput.value = price;
      amountDisplay.textContent = formattedPrice + ' XOF';
      
      // Mettre à jour le libellé
      labelInput.value = labels[selectedType] || labels.consultation;
      
      // Mettre à jour le récapitulatif
      summaryType.textContent = selectedType.charAt(0).toUpperCase() + selectedType.slice(1);
      summaryProvider.textContent = selectedProvider === 'wave' ? 'Wave Money' : 'Orange Money';
      summaryAmount.textContent = formattedPrice + ' XOF';
      
      // Filtrer les références par type
      filterReferences(selectedType);
    }
    
    // Fonction de filtrage des références
    function filterReferences(type) {
      if (!refSelect) return;
      
      Array.from(refSelect.options).forEach(option => {
        if (!option.value) {
          option.hidden = false;
          return;
        }
        
        const isMatchingType = option.value.startsWith(type + ':');
        option.hidden = !isMatchingType;
      });
      
      // Réinitialiser la sélection si elle n'est plus valide
      const currentOption = refSelect.options[refSelect.selectedIndex];
      if (currentOption && currentOption.hidden) {
        refSelect.value = '';
      }
    }
    
    // Écouteurs d'événements
    typeRadios.forEach(radio => {
      radio.addEventListener('change', updatePaymentDetails);
    });
    
    if (providerSelect) {
      providerSelect.addEventListener('change', updatePaymentDetails);
    }
    
    // Gestion des filtres d'historique
    const filterBtns = document.querySelectorAll('.filter-btn');
    const paymentCards = document.querySelectorAll('.payment-card');
    
    filterBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        // Mettre à jour les boutons actifs
        filterBtns.forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        
        const filter = this.dataset.filter;
        
        // Filtrer les cartes
        paymentCards.forEach(card => {
          if (filter === 'all' || card.dataset.status === filter) {
            card.style.display = 'block';
          } else {
            card.style.display = 'none';
          }
        });
      });
    });
    
    // Animation du bouton de paiement
    const payButton = document.getElementById('payButton');
    const form = document.getElementById('modernPaymentForm');
    
    if (form) {
      form.addEventListener('submit', function(e) {
        payButton.innerHTML = '<i class="bi bi-hourglass-split"></i><span>Traitement en cours...</span>';
        payButton.disabled = true;
        
        // Simuler un délai pour l'UX
        setTimeout(() => {
          // Le formulaire sera soumis normalement
        }, 500);
      });
    }
    
    // Initialisation
    updatePaymentDetails();
  });
</script>
@endsection
